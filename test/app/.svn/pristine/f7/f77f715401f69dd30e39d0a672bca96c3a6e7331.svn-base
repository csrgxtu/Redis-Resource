	/* 弹层css */
.black_overlay{
	display:none;
	position: absolute;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background-color: black;
	z-index:1001;
	-moz-opacity: 0.5;
	opacity:0.2;
	filter: alpha(opacity=20);
}
.white_content {
	display:none;
	position: absolute;
	top: 35%;
	left: 35%;
	width: 300px;
	height: 150px;
	border: 2px solid lightblue;
	background-color: white;
	z-index:1002;
	overflow: auto;
}


