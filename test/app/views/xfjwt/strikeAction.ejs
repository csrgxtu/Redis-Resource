<style>
	input{
		padding-left:4px;
	}
</style>
<div data-options="region:'center'">
	<div id="container" style="width:100%;height:100%;"></div>
</div>

<div data-options="region:'west',split:true,border:true,title:'搜索结果'" style="width:300px;">
	<table  class="easyui-datagrid"  id="addressTable" data-options="
				rownumbers:true, 
				singleSelect:true,
				autoRowHeight:false,				
				collapsible:false,
				toolbar:'#toolbar',
				remoteSort:false,
				multiSort:true,
				loadMsg:'正在加载数据，请稍等...',
				striped:true,
				fit:true,
				fitColumns:true">
		<thead>  	
			<tr>
				<th data-options="field:'abc',width:40,sortable:true">编码</th>
				<th data-options="field:'title',width:120,sortable:true">地址名称</th>						
			</tr>
		</thead>  
	</table>
</div>


<div id="toolbar" style="margin:5px;height:35px;">
	<input class="textbox" style="height:30px;width:200px" placeholder="输入查询地址" id="addressInputSearch"  onkeypress="EnterPress()" onkeydown="EnterPress()"/>
	<a href="javascript:void(0)" id="select" class="easyui-linkbutton" iconCls="icon-search" onClick="searchByStationName();">搜索</a>	
</div>

